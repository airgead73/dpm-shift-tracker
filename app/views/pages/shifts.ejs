<%- include ('../partials/head') %>
  <%- include ('../partials/header') %>

  <main class="main main--list">

    <h2>shift dashboard</h2>

    <table class="table">
      <thead>
        <tr>
          <td>date</td>
          <td>rate</td>
          <td>items</td>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <% shifts.forEach(item => { %>

          <tr id="<%= item.id %>">
            <td><a href="/shifts/<%= item.id %>"><%= item.date_formatted %></a></td>
            <td><%= item.rate %></td>
            <td><%= item.items %></td>
            <td><button class="btn btn-link">delete</button></td>
          </tr>

          <% }); %>

      </tbody>
    </table>
  




  </main>


    <%- include('../partials/foot') %>