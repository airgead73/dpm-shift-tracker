<%- include ('../partials/head') %>
  <%- include ('../partials/header') %>
  <form method="POST" action="/api/shifts" enctype="application/json" target="/" data-form="fetch" class="form card card--add">
    <div class="card-header bg-dark text-light">
      start new shift
    </div>
    <div class="card-body row g-3 mt-1">
      <div class="col-md-8">
        <input type="datetime-local" class="form-control" id="date" name="date">
      </div>
      <div class="col-md-4">
        <input type="number" class="form-control" id="floor" name="floor" placeholder="floor">
      </div>
      <div class="col-md-12 mt-4">
        <button class="btn btn-outline-secondary mb-2">start</button>
      </div>
    </div>
  </form> 
