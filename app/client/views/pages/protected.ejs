<%- include ('../partials/head') %>

<header>
  <h1>DPM SHIFT TRACKER</h1>
  <p><span><small><a href="/logout">logout</a></small></span></p>
</header>
<main>
  <div>
    <p><%= date %> </p>
    <p><%= items %> </p>
    <p><%= rate %> </p>
  </div>
  <form 
    class="form" 
    id="form_shifts_post" 
    action="/api/shifts" method="POST" enctype="application/json" 
    target="/">
  <fieldset>
    <legend>post shifts</legend>
    <label for="date">
      date
      <input type="datetime-local" id="date" name="date">
    </label>
    <label for="items">
      items
      <input type="number" min="0" max="5000" id="items" name="items">
    </label>
    <button type="submit">POST</button>
  </fieldset>
</form>
<form 
  class="form" 
  id="form_shifts_get" 
  action="/api/shifts" method="GET" enctype="application/json" 
  target="/">
  <fieldset>
  <legend>get shifts</legend>
  <button type="submit">GET</button>
  </fieldset>
</form>
<form 
  class="form" 
  id="form_shifts_detail" 
  action="/api/shifts/123" method="GET" enctype="application/json" 
  target="/">
  <fieldset>
  <legend>get shift detail</legend>
  <button type="submit">GET</button>
  </fieldset>
</form>
<form 
  class="form" 
  id="form_shifts_update" 
  action="/api/shifts/123" method="PUT" enctype="application/json" 
  target="/">
  <fieldset>
  <legend>update shift</legend>
  <button type="submit">PUT</button>
  </fieldset>
</form>
<form 
  class="form" 
  id="form_shifts_deletet" 
  action="/api/shifts/123" method="DELETE" enctype="application/json" 
  target="/">
  <fieldset>
  <legend>delete</legend>
  <button type="submit">DELETE</button>
  </fieldset>
</form>
</main>

<%- include('../partials/foot') %>