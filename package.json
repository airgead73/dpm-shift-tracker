{
  "name": "dpm-shift-tracker",
  "version": "1.0.0",
  "description": "Application (node, express, ejs, mongodb, auth0) for tracking shifts.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "local": "NODE_ENV=development nodemon -r dotenv/config index.js",
    "deploy": "git push heroku v10:main"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/airgead73/dpm-shift-tracker.git"
  },
  "keywords": [
    "node",
    "express",
    "ejs",
    "mongodb",
    "auth0"
  ],
  "author": "dan moneypenny",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/airgead73/dpm-shift-tracker/issues"
  },
  "homepage": "https://github.com/airgead73/dpm-shift-tracker#readme",
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "ejs": "^3.1.6",
    "express": "^4.17.3",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-openid-connect": "^2.7.1",
    "express-rate-limit": "^6.3.0",
    "express-session": "^1.17.2",
    "express-validator": "^6.14.0",
    "helmet": "^5.0.2",
    "hpp": "^0.2.3",
    "memorystore": "^1.6.7",
    "mongoose": "^6.2.6",
    "xss-clean": "^0.1.1"
  },
  "nodemonConfig": {
    "delay": 2500,
    "ext": "js,json",
    "ignore": [
      "app/client/public/*",
      "app/views/*",
      "scss/*",
      "*.ejs"
    ]
  }
}
