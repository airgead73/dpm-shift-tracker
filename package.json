{
  "name": "dpm-shift-tracker",
  "version": "1.0.0",
  "description": "Application (node, express, ejs, mongodb, auth0) for tracking shifts.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "watch-server": "NODE_ENV=development nodemon -r dotenv/config index.js",
    "watch-public": "gulp dev",
    "watch": "concurrently \"npm:watch-public\" \"npm:watch-server\"",
    "deploy": "git push heroku v14:main",
    "build": "gulp build",
    "heroku-postbuild": "echo Skip builds on Heroku"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/airgead73/dpm-shift-tracker.git"
  },
  "keywords": [
    "node",
    "express",
    "ejs",
    "mongodb",
    "auth0"
  ],
  "author": "dan moneypenny",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/airgead73/dpm-shift-tracker/issues"
  },
  "homepage": "https://github.com/airgead73/dpm-shift-tracker#readme",
  "browserslist": [
    ">1%",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "ejs": "^3.1.6",
    "express": "^4.17.3",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-openid-connect": "^2.7.1",
    "express-rate-limit": "^6.3.0",
    "express-session": "^1.17.2",
    "express-validator": "^6.14.0",
    "helmet": "^5.0.2",
    "hpp": "^0.2.3",
    "memorystore": "^1.6.7",
    "mongoose": "^6.2.6",
    "xss-clean": "^0.1.1"
  },
  "nodemonConfig": {
    "delay": 2500,
    "ext": "js,json",
    "ignore": [
      "app/client/public/*",
      "app/views/*",
      "scss/*",
      "*.ejs"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/runtime": "^7.17.8",
    "bootstrap": "^5.1.3",
    "bootswatch": "^5.1.3",
    "browserify": "^17.0.0",
    "camelcase": "^6.3.0",
    "concurrently": "^7.0.0",
    "del": "^6.0.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-cssnano": "^2.1.3",
    "gulp-mode": "^1.1.0",
    "gulp-postcss": "^9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-uglify": "^3.0.2",
    "sass": "^1.49.9",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "webpack": "^5.70.0",
    "webpack-stream": "^7.0.0"
  }
}
